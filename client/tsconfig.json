{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "es6"],
        "allowJs": true,
        "sourceMap": true,
        "module": "commonjs",
        "removeComments": true,
        "jsx": "react",
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "outDir": "dist",
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "server",
        "test",
    ]
}